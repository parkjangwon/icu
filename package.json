{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:all": "npm-run-all --parallel dev:*",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    
    "docker:prod:build": "bash docker/build.sh production build",
    "docker:prod:up": "bash docker/build.sh production up",
    "docker:prod:down": "bash docker/build.sh production down",
    "docker:prod:logs": "bash docker/build.sh production logs",

    "docker:dev:build": "bash docker/build.sh development build",
    "docker:dev:up": "bash docker/build.sh development up",
    "docker:dev:down": "bash docker/build.sh development down",
    "docker:dev:logs": "bash docker/build.sh development logs"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
